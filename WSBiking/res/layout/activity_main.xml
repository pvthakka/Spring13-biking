<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

     <ImageView
         android:id="@+id/banner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:contentDescription="banner text"
         android:src="@drawable/banner" />

     <ImageView
         android:id="@+id/bike"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/banner"
         android:contentDescription="banner image"
         android:src="@drawable/bike" />

     <ImageView
         android:id="@+id/NLogin"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/bike"
         android:layout_marginTop="14dp"
         android:clickable="true"
         android:contentDescription="@string/login"
         android:src="@drawable/nlogin" />

     <ImageView
         android:id="@+id/FLogin"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/NLogin"
         android:layout_marginTop="14dp"
         android:clickable="true"
         android:contentDescription="@string/login"
         android:src="@drawable/login" />

     <ImageView
         android:id="@+id/SignUp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/FLogin"
         android:layout_marginTop="14dp"
         android:clickable="true"
         android:contentDescription="signup"
         android:src="@drawable/signup" />

</RelativeLayout>